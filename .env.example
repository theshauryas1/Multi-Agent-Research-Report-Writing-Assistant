# Multi-Agent Research & Report Writing Assistant
# Copy this file to .env and fill in your API keys

# Model Mode: "free", "local", or "paid"
MODEL_MODE=free

# HuggingFace API Key (for free mode)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# OpenAI API Key (for paid mode)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional, for paid mode)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# SerpAPI Key (optional, for real web search)
SERPAPI_API_KEY=your_serpapi_api_key_here

# Ollama Base URL (for local mode)
OLLAMA_BASE_URL=http://localhost:11434
